{
  "name": "@barista-dex/cli-dlp",
  "version": "0.1.23",
  "description": "CLI for Barista DEX Liquidity Providers (DLPs)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "barista-dlp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build",
    "barista-dlp": "ts-node src/index.ts"
  },
  "keywords": [
    "solana",
    "defi",
    "perpetuals",
    "liquidity-provider",
    "cli",
    "barista-dex",
    "dlp",
    "trading",
    "derivatives",
    "slab"
  ],
  "author": "Barista DEX",
  "homepage": "https://github.com/barista-dex/barista-dex#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barista-dex/barista-dex.git",
    "directory": "cli-dlp"
  },
  "bugs": {
    "url": "https://github.com/barista-dex/barista-dex/issues"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@barista-dex/sdk": "^0.1.15",
    "@solana/web3.js": "^1.87.0",
    "bn.js": "^5.2.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.0.0",
    "inquirer": "^9.2.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "moduleNameMapper": {
      "^chalk$": "<rootDir>/src/__tests__/__mocks__/chalk.ts"
    }
  }
}
