{
  "name": "@barista-dex/cli-dlp",
  "version": "0.1.0",
  "description": "CLI for Barista DEX Liquidity Providers (DLPs)",
  "main": "dist/index.js",
  "bin": {
    "barista-dlp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "barista-dlp": "ts-node src/index.ts"
  },
  "keywords": [
    "solana",
    "defi",
    "perpetuals",
    "liquidity-provider",
    "cli"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@solana/web3.js": "^1.87.0",
    "@barista-dex/sdk": "workspace:*",
    "bn.js": "^5.2.1",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "cli-table3": "^0.6.3",
    "inquirer": "^9.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/bn.js": "^5.1.1",
    "@types/inquirer": "^9.0.0",
    "typescript": "^5.2.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
